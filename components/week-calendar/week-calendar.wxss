/* components/week-calendar/week-calendar.wxss */
.week-calendar-container {
  position: relative;
  width: 100%;
  height: 220rpx; /* 调整高度以适应布局 */
  background-color: #07c160; /* 主品牌色背景 */
  color: #fff;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  border-radius: 0 0 24rpx 24rpx; /* 底部圆角 */
}

.curve-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 曲线区域高度 */
  z-index: 1;
}

.days-container {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  padding-bottom: 20rpx;
  z-index: 2;
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 14.28%;
  opacity: 0.8;
  transition: all 0.3s;
}

.day-item.active {
  opacity: 1;
  font-weight: bold;
}

.weekday {
  font-size: 24rpx;
  margin-bottom: 12rpx;
  color: rgba(255, 255, 255, 0.8);
}

.date-num-wrapper {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: background-color 0.3s;
}

.day-item.active .date-num-wrapper {
  background-color: rgba(255, 255, 255, 0.2);
}

.date-num {
  font-size: 30rpx;
}

.dot-placeholder {
  height: 40rpx; /* 对应 Canvas 区域的一部分 */
}