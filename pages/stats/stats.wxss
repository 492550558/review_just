/**
 * @file stats.wxss
 * @description 统计页面样式
 */
.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* Tab 切换 */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  border-radius: 8rpx;
}

.tab-item.active {
  background: #07c160;
  color: #fff;
  font-weight: 500;
}

/* 日期选择器 */
.date-picker-group {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.picker {
  padding: 10rpx 20rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 20rpx;
}

/* 概览卡片 */
.stats-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.num.green { color: #07c160; }
.num.red { color: #f44336; }
.num.blue { color: #1989fa; }

.label {
  font-size: 24rpx;
  color: #999;
}

/* 图表容器 */
.chart-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 10rpx; /* 减少左右 padding */
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.pie-chart-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

.pie-chart {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.legend-container {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.green { background: #07c160; }
.dot.red { background: #f44336; }

.empty-tip {
  color: #999;
  font-size: 26rpx;
}

/* 折线图 */
.line-chart {
  width: 100%;
  height: 200rpx;
}